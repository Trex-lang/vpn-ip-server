# Server Configuration
PORT=3000
NODE_ENV=development

# Bitcoin Configuration
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_bitcoin_rpc_user
BITCOIN_RPC_PASSWORD=your_bitcoin_rpc_password
BITCOIN_NETWORK=testnet

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Database
DATABASE_PATH=./vpn_database.sqlite

# Payment Configuration
MONTHLY_PRICE_BTC=0.001
PAYMENT_CONFIRMATION_BLOCKS=6

# IP Address Pool Configuration
IP_POOL_START=192.168.1.100
IP_POOL_END=192.168.1.149
SUBNET_MASK=255.255.255.0
GATEWAY=192.168.1.1

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/vpn_server.log

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 